<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.content %></td>
        <td><%= image_tag picture.image.url %></td>
        <td><%= picture.user.name %></td>
        <td><%= link_to '詳細', picture %></td>
        
        <% if current_user.id == picture.user_id %>
          <td><%= link_to '編集', edit_picture_path(picture) %></td>
          <td><%= link_to '削除', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        
    <% end %>
  </tbody>
</table>

<br>

<div class="f_button">
<%= link_to '写真を投稿する', new_picture_path %>
<%= link_to 'お気に入り', favorites_path %>
</div>

